<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/frag_List_ImageView_Movie_Poster"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"

        android:padding="10dp"
        android:background="#fd060606"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frag_List_TextView_Movie_Title"
            android:text="Let the Right One In"
            android:textSize="16dp"
            android:textColor="#fff9f8"
            android:background="#fd060606"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="0dp"
            android:gravity="bottom"
            />
        <!--android:text="Four Shades of Brown"-->


        <TextView
            android:id="@+id/frag_List_TextView_Movie_Year"
            android:text="2015"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frag_List_TextView_Movie_Title"
            android:textColor="#fff9f8"
            android:textSize="12dp"
            android:background="#fd060606"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="4dp"
            android:paddingTop="0dp"
            android:gravity="center"
            />

        <!--android:text="2015"-->
    </LinearLayout>


</RelativeLayout>