<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tarsakh.assignment_2.Frag_Movie_List"
    android:id="@+id/Frag_Movie_List_LayOut"
    >

    <ImageView
        android:layout_width="190dp"
        android:layout_height="255dp"
        android:id="@+id/imageView_Movie_Poster"
        android:layout_gravity="left|top"
        android:background="@drawable/you_the_living_fanart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Four Shades of Brown"
        android:id="@+id/textView_Movie_Title"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_alignBottom="@+id/imageView_Movie_Poster"
        android:textStyle="bold"
        android:textSize="25dp"
        android:elegantTextHeight="true"
        android:layout_alignEnd="@+id/imageView_Movie_Poster"
        android:autoText="true"
        android:textColor="#040933" />

</RelativeLayout>
